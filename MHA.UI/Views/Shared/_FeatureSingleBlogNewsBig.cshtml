@model MHA.UI.Models.NewsCategoryViewModel
@foreach (var item in Model.News)
{
    <div class="col-12 col-lg-7">
        <div class="single-blog-post featured-post">

                <div class="post-thumb">
                    <a href="#"><img src="@item.Image" alt=""></a>
                </div>
            
            <div class="post-data">
                <a href="#" class="post-catagory">@item.Category.CategoryName</a>
                <a href="#" class="post-title">
                    <h6>@item.NewsHeader</h6>
                </a>
                <div class="post-meta">
                    <p class="post-author">By <a href="#">@item.NewsSmallContent</a></p>
                    <p class="post-excerp">@item.NewsContent </p>
                    <!-- Post Like & Post Comment -->
                    <div class="d-flex align-items-center">
                        <table>

                            <tr>
                                @foreach (var tag in @item.Tag)
                                {
                                    <td>#@tag.TagName</td>
                                }

                            </tr>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-5">
        <!-- Single Featured Post -->
        <div class="single-blog-post featured-post-2">
            <div class="post-thumb">
                <a href="#"><img src="@item.Image" alt=""></a>
                @*<img src=".././@item.Image" alt="">*@
            </div>
            <div class="post-data">
                <a href="#" class="post-catagory">@item.Category.CategoryName</a>
                <div class="post-meta">
                    <a href="#" class="post-title">
                        <h6>@item.NewsSmallContent</h6>
                    </a>
                    <!-- Post Like & Post Comment -->
                    <div class="d-flex align-items-center">
                        <table>

                            <tr>
                                @foreach (var tag in @item.Tag)
                                {
                                    <td>#@tag.TagName</td>
                                }

                            </tr>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

