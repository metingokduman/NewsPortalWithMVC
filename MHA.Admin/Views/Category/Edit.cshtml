@model MHA.Data.Domain.Category
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    @Html.HiddenFor(x => x.Id)
                    <form role="form" method="post">
                        <div class="form-group">

                            <label for="exampleInputEmail1">Üst Kategori</label>

                            @Html.DropDownListFor(model => model.ParentId, new SelectList(ViewBag.Category, "Id", "CategoryName"), ("Seçiniz"), new { @class = "form-control", id = "ParentId", name = "CategoryName" })

                        </div>
                        <div class="form-group">
                            <label for="text">Kategori Adı</label>
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", id = "CategoryName", name = "CategoryName", placeholder = "Kategori Adı" })
                            @*<input type="text" class="form-control" id="CategoryName" name="CategoryName" placeholder="Kategori Adı Yaz" required="required">*@
                        </div>

                        <div class="form-group">
                            <label for="text">Kategori URL</label>
                            @*@Html.TextBoxFor(x => x.URL, new { @class = "form-control",  placeholder = "Kategori URL" })*@
                            @Html.TextBoxFor(x => x.URL, new { @class = "form-control", id = "URL", name = "URL", placeholder = "Kategori URL" })
                            @*<input type="text" class="form-control" id="URL" name="URL" placeholder="URL">*@
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" checked id="activeCategory" name="IsActived"> Aktif Mi?
                            </label>
                        </div>
                        <div class="form-group">
                            @*<a href="#"class="btn btn-default" onclick="AddCategory()" >Kaydet</a>*@
                            <button type="submit" class="btn btn-default" onclick="EditCategory()">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

